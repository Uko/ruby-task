= form_for(@ticket) do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2
        = pluralize(@ticket.errors.count, "error")
        prohibited this ticket from being saved:
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :customer_name
    %br/
    = f.text_field :customer_name
  .field
    = f.label :customer_mail
    %br/
    = f.text_field :customer_mail
  .field
    = f.label :department
    %br/
    = f.select :department, available_departments
  .field
    = f.label :status
    %br/
    = f.select :status, available_statuses
  .field
    = f.label :employee
    %br/
    = f.collection_select :employee_id, Employee.all, :id, :login, :include_blank => true
  .actions
    = f.submit
